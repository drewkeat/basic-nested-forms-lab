<h1> New Recipe </h1>

<%= form_for @recipe do |f|%>
    <%= f.label :title %>
    <%= f.text_field :title %> <br>
    <br>
    <p>Ingredients:</p>
  <%= f.fields_for :ingredients do |ingredients_attributes| %>
    <%= ingredients_attributes.label :name %>
    <%= ingredients_attributes.text_field :name %><br/>

    <%= ingredients_attributes.label :quantity %>
    <%= ingredients_attributes.text_field :quantity %><br/>
    
  <% end %>
    
    <br>
    <%= f.submit %>
<% end %>
